---
const projects = [
  {
    title: "Projecte 1",
    link: "veure projecte",
    client: "Client 1",
    technology: "Tecnologia 1",
    design: "Disseny 1",
    imgSrc: "/img/infonet.png",
  },
  {
    title: "Projecte 2",
    link: "veure projecte",
    client: "Client 2",
    technology: "Tecnologia 2",
    design: "Disseny 2",
    imgSrc: "/img/infonet.png",
  },
  {
    title: "Projecte 3",
    link: "veure projecte",
    client: "Client 3",
    technology: "Tecnologia 3",
    design: "Disseny 3",
    imgSrc: "/img/infonet.png",
  },
  {
    title: "Projecte 4",
    link: "veure projecte",
    client: "Client 4",
    technology: "Tecnologia 4",
    design: "Disseny 4",
    imgSrc: "/img/infonet.png",
  },
];
---

{
  projects.map((project) => (
    <div id="Projectes" class="projectes">
      <div class="projecte">
        <div class="blanc">
          <h2>{project.title}</h2>
          <p>{project.link}</p>
          <p>{project.client}</p>
          <p>{project.technology}</p>
          <p>{project.design}</p>
        </div>
        <div class="vermell">
          <div class="laptop-container">
            <div class="screen">
              <img src={project.imgSrc} alt={project.title} />
            </div>
            <div class="laptop-base" />
          </div>
        </div>
      </div>
    </div>
  ))
}

<style lang="scss">
  @import "../styles/variables.scss";

  .projectes {
    position: sticky;
    top: 0;
    height: 100dvh;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    &:first-child {
      background-color: #fff;
    }
    &:not(:first-child) {
      background-color: transparent;
    }
    .projecte {
      border: 5px solid #b5ae32;
      background-color: #240707;
      border-radius: 12px;
      width: calc(100% - 40px);
      height: calc(100dvh - 120px);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      @media screen and (min-width: $tall2) {
        flex-direction: row;
      }
      .blanc,
      .vermell {
        width: 100%;
        height: 100%;
        margin: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        h2 {
          font-size: 60px;
        }
      }
      .background-imatge {
        display: flex;
        justify-content: center;
        align-items: center;
        border: 10px solid white;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        width: 500px;
        height: 300px;
      }
    }
    .laptop-container {
      width: 80%;
      max-height: 350px;
      aspect-ratio: 16/9;
      border: 10px solid #333;
      border-radius: 5px;
      position: relative;
      margin: 50px auto;
      background-color: #f0f0f0;
    }

    /* Pantalla del portátil */
    .screen {
      width: 100%;
      height: 100%;
      background-color: white;
      overflow: hidden;
      img {
        width: 100%;
      }
    }

    /* Base inferior del portátil */
    .laptop-base {
      width: 120%;
      height: 5px;
      background: linear-gradient(
        to right,
        #b3b3b3 0%,
        #808080 5%,
        #808080 45%,
        #808080 50%,
        #808080 55%,
        #808080 95%,
        #b3b3b3 100%
      );
      position: absolute;
      bottom: -15px;
      left: 50%;
      transform: translateX(-50%);
      @media screen and (min-width: $tall1) {
        height: 10px;
        bottom: -20px;
      }

      &::before {
        content: "";
        width: 100px;
        height: 6px;
        background: linear-gradient(
          to right,
          #808080 0%,
          #b3b3b3 5%,
          #b3b3b3 45%,
          #b3b3b3 50%,
          #b3b3b3 55%,
          #b3b3b3 95%,
          #808080 100%
        );
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        border-bottom-left-radius: 8px;
        border-bottom-right-radius: 8px;
      }
      &::after {
        content: "";
        width: 100%;
        height: 8px;
        background: linear-gradient(
          to right,
          #666666 0%,
          #999999 5%,
          #999999 45%,
          #999999 50%,
          #999999 55%,
          #999999 95%,
          #666666 100%
        );

        position: absolute;
        bottom: -7px;
        left: 50%;
        transform: translateX(-50%);
        border-radius: 0 0 10px 10px;
      }
    }
  }
</style>
